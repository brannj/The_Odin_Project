<!DOCTYPE html>
<html>
  <head>
    <title>New User</title>
  </head>
  <body>
    <h1>New User</h1>
    <%= form_for(@user) do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br><br>
      <%= f.label :email %><br>
      <%= f.email_field :email %><br><br>
      <%= f.label :password %><br>
      <%= f.password_field :password %><br><br>
      <%= f.submit "Create User" %>
    <% end %>
  </body>
</html>
